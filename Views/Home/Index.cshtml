    ViewBag.Title = "Home Page";
}

@*@model List<MVC_app1.DB_connection.Employee>*@
@model List<MVC_app1.Models.emp>

<table class=" table table-responsive table-hover table-bordered ">
    <tr>
        <th>Name</th>
        <th>id</th>
        <th>Email</th>
        <th>Branch</th>
        <th>Sal</th>
        <th>Modify</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@item.name</td>
    <td>@item.id</td>
    <td>@item.email</td>
    <td>@item.branch</td>
    <td>@item.sal</td>

    <td>
        <a class=" btn-warning btn-group" href=" @Url.Action("Add","Home", new { item.id})">Add</a>
    </td>
    <td>
        <a class="btn btn-danger" href=" @Url.Action("Delete","Home", new { item.id})">Delete</a>
    </td>
</tr>
     }

</table>

